#!/bin/sh
#
# see: dh_installdeb(1)

set -e

package="doc-beaglebone-getting-started"
core_version="2015-12-04"

sha256sum_img_xz="b9af2ce40cc2e02278fa561d034b91c1a223590591cc857fbe2664444b11d4ef"
    wfile_img_xz="beaglebone-getting-started-${core_version}.img.xz"
       wfile_img="beaglebone-getting-started-${core_version}.img"

partner_url="https://rcn-ee.com/repos/git/archive/beaglebone-getting-started"
extract_dir="/var/cache/${package}/"

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


dl_img_xz() {
	wget --no-check-certificate ${partner_url}/${wfile_img_xz}
	unset sha256compare
	sha256compare=$(sha256sum ${wfile_img_xz} | awk '{print $1}')
	if [ ! "x${sha256compare}" = "x${sha256sum_img_xz}" ] ; then
		rm -rf ${wfile_img_xz}
		wget --no-check-certificate ${partner_url}/${wfile_img_xz}
		unset sha256compare
		sha256compare=$(sha256sum ${wfile_img_xz} | awk '{print $1}')
		if [ ! "x${sha256compare}" = "x${sha256sum_img_xz}" ] ; then
			echo "dl failure"
			exit 1
		fi
	fi
	unxz ${wfile_img_xz}
}

dl_install() {
	if [ ! -d /var/cache/${package} ] ; then
		mkdir -p /var/cache/${package}
	fi

	cd /var/cache/${package}/

	if [ ! -f ${wfile_img} ] ; then
		if [ ! -f ${wfile_img_xz} ] ; then
			dl_img_xz
		else
			unxz ${wfile_img_xz}
		fi
	fi

	if [ -f ${wfile_img} ] ; then
		ln -sf /var/cache/${package}/beaglebone-getting-started-${core_version}.img /var/local/usb_mass_storage.img
	fi
}

case "$1" in
    configure)
	dl_install
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

