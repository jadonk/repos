#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

confflags=--prefix=/usr \
          PLATFORM=DRA7XX \
          AF_RPMSG=41 \
          KERNEL_INSTALL_DIR=/usr/src/rpmsg-rpc-4.1

%:
	dh $@ --with autoreconf

export EXTRA_LIB=-lpthread

override_dh_auto_configure:
	./configure $(confflags)

override_dh_strip:
	dh_strip --dbg-package=ti-ipc-dra7xx-dbg
